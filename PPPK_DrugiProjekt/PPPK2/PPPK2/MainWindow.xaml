<Window x:Class="PPPK2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPPK2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame
            NavigationUIVisibility="Hidden"
            x:Name="Frame"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        <Menu 
            Background="Black"
            HorizontalAlignment="Left" Height="30" Margin="0,0,-0.4,0" FontSize="16" VerticalAlignment="Top" Width="794">
            <MenuItem Foreground="DeepPink" Header="TV hosts" x:Name="MiTVHosts" Margin="40,2,0,0"  Click="MiTVHosts_Click"/>
            <MenuItem Foreground="DeepPink" Header="TV shows" x:Name="MiTVShows" Margin="20,2,0,0"  Click="MiTVShows_Click"/>
        </Menu>
    </Grid>

</Window>
